# =====================================================
# Configuration Production - Backend Station Service
# =====================================================

# Base de données MySQL Production
DB_HOST=localhost
DB_USER=station_app_prod
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_FORT
DB_NAME=station_service_prod
DB_PORT=3306

# Note: Si vous utilisez le même serveur MySQL que le dev,
# assurez-vous d'utiliser un nom de BD différent (station_service_prod vs station_service)

# Configuration Serveur
PORT=3000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=CHANGEZ_CE_SECRET_TRES_LONG_ET_COMPLEXE_POUR_LA_PRODUCTION
JWT_EXPIRES_IN=8h

# Email Configuration (Gmail ou autre SMTP)
# Utilisez un mot de passe d'application Gmail (pas votre mot de passe principal)
# Pour créer: https://myaccount.google.com/apppasswords
EMAIL_USER=mahdibey2002@gmail.com
EMAIL_PASS=CHANGEZ_MOT_DE_PASSE_APP_GMAIL

# URLs Production
FRONTEND_URL=https://votre-domaine.com
BASE_URL=https://api.votre-domaine.com

# Odoo Configuration (si utilisé)
ODOO_URL=http://localhost:8069
ODOO_DB=station_service_prod
ODOO_USER=admin
ODOO_PASSWORD=CHANGEZ_MOT_DE_PASSE_ODOO
ODOO_API_KEY=VOTRE_CLE_API_ODOO

# Sécurité
# Générez une clé secrète forte pour la session
SESSION_SECRET=CHANGEZ_CE_SECRET_SESSION_COMPLEXE

# CORS Origins (ajoutez vos domaines autorisés)
ALLOWED_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com

# Limites
MAX_FILE_SIZE=10485760
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=error
LOG_FILE=/var/log/station-service/backend.log
